<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ControleurVisiteur2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_vertical|center"
            android:text="ComSupEco - Diplôme \n et établissement"
            android:textSize="26sp"
            android:layout_marginTop="40dp"/>

        <ImageView
            android:id="@+id/meeting"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:src="@mipmap/visiteur2"
            />

        <TextView
            android:id="@+id/epreuve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="⚫ Diplôme ⚫"
            android:textSize="20sp"
            android:translationX="2dp" />

        <EditText
            android:id="@+id/information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Nom établissement..."
            android:inputType="textPersonName" />

        <Button
                android:id="@+id/suivant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Suivant" />
    </LinearLayout>

    <include layout="@layout/navbar"></include>

</androidx.constraintlayout.widget.ConstraintLayout>